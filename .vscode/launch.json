{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask Debugger",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "run.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "-h",
                "0.0.0.0",
                "-p",
                "5000",
            ],
            "justMyCode": false,
            "jinja": true,
            "autoStartBrowser": false
        }
    ]
}